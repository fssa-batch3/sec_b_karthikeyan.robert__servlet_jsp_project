            let colected_percentage=Math.floor((t_amount/goal_amt)*100);


            console.log(colected_percentage);


            // progress bar value 

            const progressval = colected_percentage;
            const elm = document.querySelectorAll(".progressab")[0];

            elm.style.width = `${progressval}%`;

